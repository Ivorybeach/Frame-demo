<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">


<mapper namespace="shiro.mapper.CustomRoleDao">

	<select id="getAllRoleSn" resultType="string">
		select sn from role
	</select>

	<select id="getRoleSnByUserId" parameterType="long"
		resultType="string">
		select sn from role where id in (select role_id from
		user_role where user_id = #{userId})
	</select>

	<select id="getPermissionResourceByUserId" parameterType="long"
		resultType="string">

		select resource from permission where id in (select permission_id from
		role_permission where role_id in (
		select role_id from user_role where
		user_id = #{userId}
		))

	</select>
	
	<select id="getUserByUsername" parameterType="string"
		resultType="shiro.pojo.User">
		select * from user where username = #{username}
	</select>
	<insert id="insertUser" parameterType="string">
		insert into user(username,password) values (#{username},#{password})
	</insert>
</mapper>