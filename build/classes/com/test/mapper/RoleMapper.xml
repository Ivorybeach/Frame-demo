<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">


<mapper namespace="com.test.mapper.RoleMapper">
	<select id="getRole" parameterType="long" resultType="com.test.pojo.Role">
		select * from t_role where id = #{id}
	</select>
	
	<insert id="addRole" parameterType="com.test.pojo.Role">
		insert into t_role(roleName,note) values (#{roleName},#{note})
	</insert>
	
	<select id="findRoles" parameterType="com.test.pojo.RoleParam" resultType="com.test.pojo.Role">
		select * from t_role where roleName=#{roleName} and note=#{note}
	</select>
	
	<select id="findAll" resultType="com.test.pojo.Role">
		select * from t_role 
	</select>
</mapper>